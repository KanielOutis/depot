<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h2>Корзина</h2>

<table>
  <% @cart.line_items.each do |item| %>
  <tr>
    <td><%= item.product.title %></td>
    <td><%= item.quantity %>&times;</td>
    <td class="line_price"><%= number_to_currency(item.total_price) %></td>
  </tr>
  <% end %>
  <tr class="total_line">
    <td colspan="2">Всего</td>
    <td class="total_sell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<%= button_to 'Очистить корзину', @cart, method: :delete, data: {confirm: 'Корзина будет удалена, вы уверены ?'} %>
