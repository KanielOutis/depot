<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Зарегеструйтесь пожалуйста</legend>

      <div class="">
        <%= label_tag :name, 'Имя' %>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div class="">
        <%= label_tag :password, 'Пароль' %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div class="">
        <%= submit_tag "Войти" %>
        
      </div>
    </fieldset>
  <% end %>
</div>
